<div class="container">
    <div class="container__card">
        <div class="container__layer"></div>
        <div class="container__content">
            <p class="container__p">Online Store</p>
            <form action="/charge" method="POST">
                <script
                    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="{{stripePublishableKey}}"
                    data-amount="500"
                    data-name="Black Raised Right"
                    data-description="T-shirts"
                    data-image="/images/marketplace.png"
                    data-locale="auto">
                </script>
            </form>
            <div class="container__image">
                <img src="images/marketplace.png" alt="Market">
            </div>
            <div class="container__details">
                <h2>Brad is Selling</h2>
            </div>
        </div>
    </div>    
</div>

